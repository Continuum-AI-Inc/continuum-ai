---
import "../styles/global.scss";
import CookieMessage from "../components/CookieMessage.svelte";

export interface Props {
	title: string;
}

const { title } = Astro.props;

const seenCookieMessage = Astro.cookies.has("seen_cookie_message");
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description"
        content="Build your store, blog, portfolio, and more visually with the help of one of the most flexible CMS. Develop your own tools, sites and make your project stand out. Backed by one of the most insightful analytics tools, Continuum Web will help you reach your goals faster.">
		<meta name="og:title" property="og:title" content="Web Development. Visually | Continuum">
		<meta name="og:site_name" property="og:site_name" content="continuum-ai.de">
		<link rel="icon" type="image/png" href="/favicon.png">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		{seenCookieMessage || <CookieMessage></CookieMessage>}
	</body>
</html>